config wifi-device 'radio0'
	option type 'mac80211'
	option hwmode '11g'
	option path 'platform/soc/your_device_path'
	option htmode 'HT20'
	option channel '6'
	option country 'US'
	option disabled '0'

config wifi-iface 'default_radio0'
	option device 'radio0'
	option network 'lan'
	option mode 'ap'
	option ssid 'Prepper Pi'
	option encryption 'none'
