config wifi-device 'radio0'
	option type 'mac80211'
	option hwmode '11g'
	option path 'platform/soc/your_device_path'
	option htmode 'HT20'
	option channel '6'
	option country 'US'
	option disabled '0'

config wifi-device 'radio1'
	option type 'mac80211'
	option hwmode '11a'
	option path 'platform/soc/your_device_path_5g'
	option htmode 'VHT80'
	option channel '36'
	option country 'US'
	option disabled '0'

config wifi-iface 'default_radio0'
	option device 'radio0'
	option network 'lan'
	option mode 'ap'
	option ssid 'Prepper Pi'
	option encryption 'psk2'
	option key 'PrepperPi2024!'
	# For open network (emergency use only), comment out encryption and key lines above
	# option encryption 'none'

config wifi-iface 'default_radio1'
	option device 'radio1'
	option network 'lan'
	option mode 'ap'
	option ssid 'Prepper Pi 5G'
	option encryption 'psk2'
	option key 'PrepperPi2024!'
	option encryption 'none'
