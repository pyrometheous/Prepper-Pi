config defaults
	option syn_flood '1'
	option input 'ACCEPT'
	option output 'ACCEPT'
	option forward 'REJECT'

config zone
	option name 'lan'
	option input 'ACCEPT'
	option output 'ACCEPT'
	option forward 'ACCEPT'
	option network 'lan'

config zone
	option name 'wan'
	option input 'REJECT'
	option output 'ACCEPT'
	option forward 'REJECT'
	option masq '1'
	option mtu_fix '1'
	option network 'wan'

config forwarding
	option src 'lan'
	option dest 'wan'

config rule
	option name 'Allow-DHCP-Renew'
	option src 'wan'
	option proto 'udp'
	option dest_port '68'
	option target 'ACCEPT'
	option family 'ipv4'

config rule
	option name 'Allow-Ping'
	option src 'wan'
	option proto 'icmp'
	option icmp_type 'echo-request'
	option family 'ipv4'
	option target 'ACCEPT'

config rule
	option name 'Allow-IGMP'
	option src 'wan'
	option proto 'igmp'
	option family 'ipv4'
	option target 'ACCEPT'

config rule
	option name 'Allow-DHCPv6'
	option src 'wan'
	option proto 'udp'
	option src_ip 'fc00::/6'
	option dest_ip 'fc00::/6'
	option dest_port '546'
	option family 'ipv6'
	option target 'ACCEPT'

config rule
	option name 'Allow-MLD'
	option src 'wan'
	option proto 'icmp'
	option src_ip 'fe80::/10'
	option icmp_type '130/0 131/0 132/0 143/0'
	option family 'ipv6'
	option target 'ACCEPT'

config rule
	option name 'Allow-ICMPv6-Input'
	option src 'wan'
	option proto 'icmp'
	option icmp_type '128 129 131 132 133 134 135 136 137 141 142'
	option limit '1000/sec'
	option family 'ipv6'
	option target 'ACCEPT'

config rule
	option name 'Allow-ICMPv6-Forward'
	option src 'wan'
	option dest '*'
	option proto 'icmp'
	option icmp_type '128 129 131 132 133 134 135 136 137 141 142'
	option limit '1000/sec'
	option family 'ipv6'
	option target 'ACCEPT'

config rule
	option name 'Allow-IPSec-ESP'
	option src 'wan'
	option dest 'lan'
	option proto 'esp'
	option target 'ACCEPT'

config rule
	option name 'Allow-ISAKMP'
	option src 'wan'
	option dest 'lan'
	option dest_port '500'
	option proto 'udp'
	option target 'ACCEPT'

# Service redirects for Docker containers
# Routes traffic from 10.20.30.1:port to host loopback where Docker services bind

# Homepage :3000 -> 127.0.0.1:3000
config redirect
	option name 'svc-homepage'
	option src 'lan'
	option src_dport '3000'
	option proto 'tcp'
	option target 'DNAT'
	option dest_ip '127.0.0.1'
	option dest_port '3000'

# Jellyfin :8096 -> 127.0.0.1:8096
config redirect
	option name 'svc-jellyfin'
	option src 'lan'
	option src_dport '8096'
	option proto 'tcp'
	option target 'DNAT'
	option dest_ip '127.0.0.1'
	option dest_port '8096'

# Portainer :9000 -> 127.0.0.1:9000
config redirect
	option name 'svc-portainer'
	option src 'lan'
	option src_dport '9000'
	option proto 'tcp'
	option target 'DNAT'
	option dest_ip '127.0.0.1'
	option dest_port '9000'

# (Future) Tvheadend :9981 -> 127.0.0.1:9981
config redirect
	option name 'svc-tvheadend'
	option src 'lan'
	option src_dport '9981'
	option proto 'tcp'
	option target 'DNAT'
	option dest_ip '127.0.0.1'
	option dest_port '9981'
